datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    Customer?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Customer {
  id    Int     @id @default(autoincrement())
  name  String
  age Int
  email String  @unique
  is_active Boolean
  posts Post[]
}